@{
    ViewBag.Title = "Home Page";
}

<!--Banner-->
@if (!User.Identity.IsAuthenticated)
{
    <div class="banner">
        <div class="bg-color">
            <div class="container">
                <div class="row">
                    <div class="banner-text text-center">
                        <div class="text-border">
                            <h2 class="text-dec">Silicon Indy</h2>
                        </div>
                        <div class="intro-para text-center quote">
                            <p class="big-text">Bootcamp Pr</p>
                            <p class="small-text">“The only true wisdom is in knowing you know nothing.”<br>-Socrates</p>
                            <button class="btn btn-default">@Html.ActionLink("Log in", "Login", "Account")</button>
                        </div>
                        <a href="#feature" class="mouse-hover"><div class="mouse"></div></a>
                    </div>
                </div>
            </div>
        </div>
    </div>
}


@if (User.Identity.IsAuthenticated)
{
    <div>
        <div class="bg-color">
            <div class="container">
                <div class="row">
                    <h2 class="text-dec">Welcome @User.Identity.Name</h2>
                    <button class="btn btn-default">@Html.ActionLink("Lesson", "Index", "Lesson")</button>
                </div>
            </div>
        </div>
    </div>
}

<!--Banner-->
@if (User.IsInRole("Admin"))
{
    <div>
        <div class="bg-color">
            <div class="container">
                <div class="row">
                    <h2 class="text-dec">Welcome @User.Identity.Name</h2>


                    <button class="btn btn-default">@Html.ActionLink("Lesson", "Index", "Lesson")</button>
                </div>
            </div>
        </div>
    </div>
}
